        }
        .call-to-action {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            width: 35%;
            min-width: 200px;
            text-align: center;
            padding: 15px 0px;
            border: 2px solid white;
            color: white;
            font-weight: 700;
            cursor: pointer;
            font-size: calc(15px + 0.5vw);
            background-color: rgba(0,0,0,0.7);
        }
        .call-to-action:hover {
            background-color: rgba(255,255,255,0.7);
            color: black;
