<script>
    function scrollSliderLeft() {
        let slider = document.getElementById("slider");
        let sliderItems = slider.children[0];
        let currentIndex = slider.getAttribute("index");
        currentIndex = parseInt(currentIndex);
        if (currentIndex > 0) {
            sliderItems.style.transform = `translateX(-${(currentIndex-1)/sliderItems.children.length*100}%)`;
            slider.setAttribute("index", currentIndex-1);
        }
    }
    function scrollSliderRight() {
        let slider = document.getElementById("slider");
        let sliderItems = slider.children[0];
        let currentIndex = slider.getAttribute("index");
        currentIndex = parseInt(currentIndex);
        if (currentIndex < sliderItems.children.length-1) {
            sliderItems.style.transform = `translateX(-${(currentIndex+1)/sliderItems.children.length*100}%)`;
            slider.setAttribute("index", currentIndex+1);
        }
    }
    
</script>
