        .slider-arrows {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding: 0px 30px;
            align-items: center;
            position: absolute;
            top: 0;
            left: 0;
        }
        .slider-arrow {
            width: 45px;
            height: 45px;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            background-color: rgba(0,0,0,0.7);
            color: white;
            font-size: 30px;
            cursor: pointer;
        }
        .slider-arrow:hover {
            background-color: rgba(255,255,255,0.7);
            color: black;
        }
        .slider-item-holder {
            position: absolute;
            width: 300%;
            height: 100%;
            top: 0;
            left: 0;
            transform: translateX(0);
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            transition: transform 0.2s ease-out;
            will-change: transform;
        }
        .slider-item {
            width: calc(33.3% + 5px);
            height: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            background-color: #f1f1f1;
        }
        .slider-item-image {
            background-size: cover;
            width: 30%;
            min-width: 200px;
            height: 100%;
        }
        .slider-item-info {
            padding: 20px;
        }
        .slider-item-info-title {
            font-size: calc(22px + 1vw);
            font-weight: 800;
            color: rgba(0,0,0,0.8);
        }
        .slider-item-info-subtitle {
            font-size: calc(15px + 0.2vw);
            color: rgba(0,0,0,0.7);
        }
        @media screen and (max-width: 768px) {
            .slider {
                width: 95%;
            }
        }
    </style>
